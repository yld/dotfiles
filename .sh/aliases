
alias rm='rm -f'

# grep with color by default
alias   grep='grep --color=auto'
alias   fgrep='fgrep --color=auto'
alias   egrep='egrep --color=auto'

alias ls='ls --color=auto'
alias la='ls -A'
alias lla='ls -lA'
alias ll='ls -l'
alias lll='/bin/ls -Al --color|less -R'

alias df='df -h'
alias du='du -h'


alias h=history
alias hg='fc -l 0|grep '

alias pu=pushd
alias po=popd

alias ..='cd ..'
alias ...='cd ../..'
alias ....="cd ../../.."
alias .....='cd ../../../..'
alias ......='cd ../../../../..'
alias .......='cd ../../../../../..'

alias screen='screen -U'


alias w='chmod +w'
alias x='chmod +x'
alias r='chmod +r'

# buggy typing
alias :q='exit'

if [ -x $(which vim) ]; then
  alias vi=vim
fi

alias dotfiles='git --git-dir=$HOME/Src/dotfiles.git/ --work-tree=$HOME'
alias hebexfiles='git --git-dir=$HOME/Src/hebexfiles.git/ --work-tree=$HOME'







