#!/bin/sh

sudo emerge -DuvN world || ( 
until sudo emerge --resume --skipfirst; 
do
	sudo emerge --resume --skipfirst ;
done ;
echo "Initial emerge failed"
)

echo "Running revdep-rebuild"
sudo revdep-rebuild || (
until sudo emerge --resume --skipfirst; 
do
  sudo emerge --resume --skipfirst ;
done ;
echo "Initial revdep-rebuild failed"
)
echo "Running updatedb"
sudo updatedb 
echo "Done"

