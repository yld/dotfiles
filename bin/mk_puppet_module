#!/bin/sh
mkdir -p /{files,lib,manifests,templates,tests}
echo -e "class $1 {\n  \n}" >> $1/manifests/init.pp
echo -e "class $1:install {\n  \n}" >> $1/manifests/install.pp
echo -e "class $1::params {\n  \n}" >> $1/manifests/params.pp
echo "class { '$1': }" >> $1/tests/init.pp
puppet apply --noop --parseonly $1/tests/init.pp
